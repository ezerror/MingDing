<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlTimeline"
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <TextView
            android:id="@+id/tvTopLine"
            android:layout_width="83dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:background="#555" />

        <TextView
            android:id="@+id/tvDot"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_toRightOf="@id/tvTopLine"
            android:layout_centerVertical="true"
            android:background="@drawable/timelline_dot_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_toRightOf="@id/tvDot"
            android:layout_centerVertical="true"
            android:background="#999" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">


        <android.support.v7.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:id="@+id/rl_timeline_content"
                android:layout_width="150dp"
                android:layout_height="260dp"
                android:padding="10dp"
                android:background="@mipmap/timeline_bg_2">

                <TextView
                    android:id="@+id/tv_timeline_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50.0dip"
                    android:text="专业课"
                    android:textColor="@color/white"
                    android:textSize="18.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_timeline_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_timeline_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5.0dip"
                    android:text="4.5小时"
                    android:textColor="@color/white"
                    android:textSize="14.0sp" />
                <TextView
                    android:id="@+id/tv_timeline_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tv_item_content"
                    android:text="16.20"
                    android:textColor="@color/white"
                    android:textSize="12.0dip" />

                <TextView
                    android:id="@+id/tv_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"

                    android:layout_marginTop="5.0dip"
                    android:text="数据结构"
                    android:textColor="@color/white"
                    android:textSize="14.0dip" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>
</LinearLayout>
